extends ./layout/index

block contenido
    h1.text-center.mt-5 #{pagina}
    .row
        .col-md-12
            h2.d-block.w-100.text-center Agrega un Testimonial

            if(errores)
                each error in errores
                    .alert.col.alert-danger.text-center= error.mensaje

        .row.justify-content-center.col
            .col-md-8
                form(action="/testimoniales" method="POST")
                    .form-group
                        label(for="nombre") Nombre
                        input#nombre(type="text",placeholder="Ingresá tu nombre", name="nombre", class="form-control", value=nombre)
                    .form-group
                        label(for="correo") Correo electrónico  
                        input#correo(type="text",placeholder="Ingresá tu correo", name="correo", class="form-control", value=correo)
                    .form-group
                        label(for="mensaje") Mensaje  
                        textarea#mensaje(type="text",placeholder="Escribe tu mensaje...", name="mensaje", class="form-control" rows="3")=mensaje

                    input.btn.btn-success.btn-block(type="submit")